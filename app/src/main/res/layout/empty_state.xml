<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_beers">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/imageViewEmpty"
        android:src="@drawable/beer"
        android:visibility="invisible"
        android:layout_above="@+id/textViewEmptyTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <TextView
        android:id="@+id/textViewEmptyTitle"
        style="@style/Wrap"
        android:text="No Beers Found"
        android:visibility="invisible"
        android:gravity="center"
        android:textSize="27sp"
        android:textColor="@color/empty_title_grey"
        android:textAlignment="center"
        android:shadowColor="@color/empty_title_shadow"
        android:shadowDx="0"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/textViewEmptyHint"
        style="@style/Wrap"
        android:visibility="invisible"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/empty_hint_grey"
        android:shadowColor="@color/empty_hint_shadow"
        android:shadowDx="0"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:text="Awh suds, we can't find any beers!"
        android:layout_below="@+id/textViewEmptyTitle"
        android:layout_centerHorizontal="true" />
</merge>