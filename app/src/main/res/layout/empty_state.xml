<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_beers">

    <ImageView
        android:id="@+id/imageViewEmpty"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_above="@+id/textViewEmptyTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:src="@drawable/beer"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewEmptyTitle"
        style="@style/Wrap"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:shadowColor="@color/empty_title_shadow"
        android:shadowDx="0"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:text="@string/no_beers_found"
        android:textAlignment="center"
        android:textColor="@color/empty_title_grey"
        android:textSize="27sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewEmptyHint"
        style="@style/Wrap"
        android:layout_below="@+id/textViewEmptyTitle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:shadowColor="@color/empty_hint_shadow"
        android:shadowDx="0"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:text="@string/no_beers_found_message"
        android:textAlignment="center"
        android:textColor="@color/empty_hint_grey"
        android:textSize="16sp"
        android:visibility="invisible" />
</merge>