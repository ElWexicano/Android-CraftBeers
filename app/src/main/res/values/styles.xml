<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/beer_red</item>
        <item name="colorPrimaryDark">@color/beer_dark_red</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/beer_grey</item>
    </style>

    <style name="AppThemeFadingActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/beer_red</item>
        <item name="colorPrimaryDark">@color/beer_dark_red</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/beer_grey</item>
    </style>

    <style name="AppThemeWebView" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/beer_dark_red</item>
        <item name="colorAccent">@color/beer_red</item>
        <item name="android:textColorPrimary">@color/beer_red</item>
        <item name="android:textColorSecondary">@color/beer_red</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/beer_grey</item>
    </style>

    <style name="AppThemeTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppThemeSubTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">11sp</item>
    </style>

    <!-- Generic Styles - Start -->

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="MatchHeight" parent="Match">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MatchWidth" parent="Match">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FillHeight" parent="Fill">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="FillWidth" parent="Fill">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Generic Styles - End -->

    <style name="ActivityBase" parent="Match">
        <item name="android:background">@null</item>
    </style>

    <style name="BeerCard" parent="FillWidth">
        <item name="android:layout_gravity">center</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BeerViewCard" parent="BeerCard">

    </style>

    <style name="BeerLabel">
        <item name="android:layout_height">63dp</item>
        <item name="android:layout_width">63dp</item>
        <item name="android:maxHeight">63dp</item>
        <item name="android:maxWidth">63dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:src">@drawable/beer_placeholder</item>
    </style>

    <style name="BreweryLabel">
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">33dp</item>
        <item name="android:maxHeight">33dp</item>
        <item name="android:maxWidth">33dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:src">@drawable/brewery_placeholder</item>
    </style>

    <style name="HorizontalDivider" parent="FillWidth">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">#0D000000</item>
    </style>

    <style name="VerticalDivider" parent="FillHeight">
        <item name="android:layout_width">1dp</item>
        <item name="android:background">#0D000000</item>
    </style>

    <style name="BeerTitle" parent="FillWidth">
        <item name="android:textColor">#646464</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_toRightOf">@+id/imageViewBeerLabel</item>
        <item name="android:layout_alignTop">@+id/imageViewBeerLabel</item>
    </style>

    <style name="BeerShortDescription" parent="FillWidth">
        <item name="android:textColor">#59000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_toRightOf">@+id/imageViewBeerLabel</item>
        <item name="android:layout_alignBottom">@+id/imageViewBeerLabel</item>
        <item name="android:layout_below">@+id/textViewBeerTitle</item>
    </style>

    <style name="BrewedBy" parent="FillWidth">
        <item name="android:layout_alignTop">@+id/view</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">#d56f75</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="BeerValue">
        <item name="android:textColor">#d56f75</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Beers" parent="Match">
        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="AboutText" parent="FillWidth">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:textColor">#646464</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AboutSubText" parent="AboutText">
        <item name="android:textColor">#80646464</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AboutShareIcon">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="BeerAttributeTitle" parent="FillWidth">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">3</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">#33000000</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BeerAttributeTitleMulti">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#33000000</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
