<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/beer_red</item>
        <item name="colorPrimaryDark">@color/beer_dark_red</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/beer_grey</item>
    </style>

    <!-- Generic Styles - Start -->

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="MatchHeight" parent="Match">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MatchWidth" parent="Match">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FillHeight" parent="Fill">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="FillWidth" parent="Fill">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Generic Styles - End -->

    <style name="ActivityBase" parent="Match">

    </style>

    <style name="BeerCard" parent="FillWidth">
        <item name="android:layout_gravity">center</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BeerLabel">
        <item name="android:layout_height">63dp</item>
        <item name="android:layout_width">63dp</item>
        <item name="android:maxHeight">63dp</item>
        <item name="android:maxWidth">63dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:src">@drawable/beer_placeholder</item>
    </style>

    <style name="BreweryLabel">
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">33dp</item>
        <item name="android:maxHeight">33dp</item>
        <item name="android:maxWidth">33dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:src">@drawable/brewery_placeholder</item>
    </style>

    <style name="HorizontalDivider" parent="FillWidth">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">#0D000000</item>
        <item name="android:layout_below">@+id/imageViewBeerLabel</item>
    </style>

    <style name="BeerTitle" parent="FillWidth">
        <item name="android:textColor">#646464</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_toRightOf">@+id/imageViewBeerLabel</item>
        <item name="android:layout_alignTop">@+id/imageViewBeerLabel</item>
    </style>

    <style name="BeerShortDescription" parent="FillWidth">
        <item name="android:textColor">#59000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_toRightOf">@+id/imageViewBeerLabel</item>
        <item name="android:layout_toEndOf">@+id/imageViewBeerLabel</item>
        <item name="android:layout_alignBottom">@+id/imageViewBeerLabel</item>
        <item name="android:layout_below">@+id/textViewBeerTitle</item>
    </style>

    <style name="BrewedBy" parent="FillWidth">
        <item name="android:layout_alignTop">@+id/view</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textColor">#cb4c53</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>
